  BunHttpServer,
  BunHttpServerRequest,
  BunRuntime,
} from '@effect/platform-bun';
import {
  FileSystem,
  Headers,
  HttpLayerRouter,
  HttpRouter,
  HttpServerError,
  HttpServerRequest,
  HttpServerResponse,
  KeyValueStore,
  Path,
} from '@effect/platform';
import { Config, ConfigProvider, Context, Duration, Effect, Layer, Option } from 'effect';
import type { AuthSession, AuthUser } from './app/auth/auth.types';

const angularApp = new AngularAppEngine();
const browserDistUrl = new URL('../browser/', import.meta.url);

const notFoundServerResponse = HttpServerResponse.empty({ status: 404 });
const internalErrorServerResponse = HttpServerResponse.empty({ status: 500 });
const cacheControlHeader = 'public, max-age=31536000';
const defaultOrigin = 'http://localhost:4000';
const authMePath: HttpRouter.PathInput = '/auth/me';
const sessionStorePrefix = 'auth0:session:';
const transactionStorePrefix = 'auth0:transaction:';

type AuthTransaction = {
  codeVerifier: string;
  returnTo: string;
  createdAt: number;
};

type AuthConfig = {
  domain: string;
  clientId: string;
  clientSecret: string;
  scope: string;
  audience?: string;
  baseUrl?: string;
  loginPath: HttpRouter.PathInput;
  callbackPath: HttpRouter.PathInput;
  logoutPath: HttpRouter.PathInput;
  sessionCookieName: string;
  transactionTtlSeconds: number;
  sessionTtlSeconds?: number;
};

// Pull Auth0 config from the environment with sensible defaults for local SSR.
const authConfigEffect = Config.all({
  domain: Config.string('AUTH0_DOMAIN'),
  clientId: Config.string('AUTH0_CLIENT_ID'),
  clientSecret: Config.string('AUTH0_CLIENT_SECRET'),
  scope: Config.withDefault('openid profile email')(Config.string('AUTH0_SCOPE')),
  audience: Config.option(Config.string('AUTH0_AUDIENCE')),
  baseUrl: Config.option(Config.string('AUTH0_BASE_URL')),
  loginPath: Config.withDefault('/auth/login')(Config.string('AUTH0_LOGIN_PATH')),
  callbackPath: Config.withDefault('/auth/callback')(Config.string('AUTH0_CALLBACK_PATH')),
  logoutPath: Config.withDefault('/auth/logout')(Config.string('AUTH0_LOGOUT_PATH')),
  sessionCookieName: Config.withDefault('app_session')(Config.string('AUTH0_SESSION_COOKIE')),
  transactionTtlSeconds: Config.withDefault(600)(Config.integer('AUTH0_TRANSACTION_TTL_SECONDS')),
  sessionTtlSeconds: Config.option(Config.integer('AUTH0_SESSION_TTL_SECONDS')),
}).pipe(
  Effect.map((config): AuthConfig => ({
    domain: config.domain,
    clientId: config.clientId,
    clientSecret: config.clientSecret,
    scope: config.scope,
    audience: Option.getOrUndefined(config.audience),
    baseUrl: normalizeOrigin(Option.getOrUndefined(config.baseUrl)),
    loginPath: normalizePath(config.loginPath),
    callbackPath: normalizePath(config.callbackPath),
    logoutPath: normalizePath(config.logoutPath),
    sessionCookieName: config.sessionCookieName,
    transactionTtlSeconds: config.transactionTtlSeconds,
    sessionTtlSeconds: Option.getOrUndefined(config.sessionTtlSeconds),
  })),
);

const normalizePath = (value: string): HttpRouter.PathInput =>
  (value.startsWith('/') ? value : `/${value}`) as HttpRouter.PathInput;

const normalizeOrigin = (value?: string) => {
  if (!value) {
    return undefined;
  }
  return value.endsWith('/') ? value.slice(0, -1) : value;
};

const isRecord = (value: unknown): value is Record<string, unknown> =>
  typeof value === 'object' && value !== null;

// Normalize Auth0 UserInfo payload into a compact session-friendly shape.
const parseAuthUser = (value: unknown): AuthUser | null => {
  if (!isRecord(value)) {
    return null;
  }

  const sub = value['sub'];
  if (typeof sub !== 'string' || sub.length === 0) {
    return null;
  }

  const user: AuthUser = { sub };

  if (typeof value['name'] === 'string') {
    user.name = value['name'];
  }

  if (typeof value['email'] === 'string') {
    user.email = value['email'];
  }

  if (typeof value['picture'] === 'string') {
    user.picture = value['picture'];
  }

  return user;
};

const parseAuthSession = (raw: string): AuthSession | null => {
  let parsed: unknown;
  try {
    parsed = JSON.parse(raw) as unknown;
  } catch {
    return null;
  }

  if (!isRecord(parsed)) {
    return null;
  }

  const user = parseAuthUser(parsed['user']);
  if (!user) {
    return null;
  }

  const accessToken = parsed['accessToken'];
  const expiresAt = parsed['expiresAt'];

  if (typeof accessToken !== 'string' || !Number.isFinite(expiresAt)) {
    return null;
  }

  const session: AuthSession = {
    user,
    accessToken,
    expiresAt: Number(expiresAt),
  };

  if (typeof parsed['idToken'] === 'string') {
    session.idToken = parsed['idToken'];
  }

  if (typeof parsed['refreshToken'] === 'string') {
    session.refreshToken = parsed['refreshToken'];
  }

  return session;
};

const parseAuthTransaction = (raw: string): AuthTransaction | null => {
  let parsed: unknown;
  try {
    parsed = JSON.parse(raw) as unknown;
  } catch {
    return null;
  }

  if (!isRecord(parsed)) {
    return null;
  }

  const codeVerifier = parsed['codeVerifier'];
  const returnTo = parsed['returnTo'];
  const createdAt = parsed['createdAt'];

  if (
    typeof codeVerifier !== 'string' ||
    typeof returnTo !== 'string' ||
    !Number.isFinite(createdAt)
  ) {
    return null;
  }

  return {
    codeVerifier,
    returnTo,
    createdAt: Number(createdAt),
  };
};

const getHeaderValue = (headers: Headers.Headers, key: string) =>
  Option.getOrUndefined(Headers.get(headers, key));

// Derive the request origin for redirects (useful behind proxies and CDNs).
const resolveRequestOrigin = (
  request: HttpServerRequest.HttpServerRequest,
  authConfig: AuthConfig,
) => {
  if (authConfig.baseUrl) {
    return {
      origin: authConfig.baseUrl,
      isSecure: authConfig.baseUrl.startsWith('https://'),
    };
  }

  const proto =
    getHeaderValue(request.headers, 'x-forwarded-proto') ??
    getHeaderValue(request.headers, 'x-forwarded-protocol') ??
    'http';
  const host =
    getHeaderValue(request.headers, 'x-forwarded-host') ??
    getHeaderValue(request.headers, 'host');

  const origin = host ? `${proto}://${host}` : defaultOrigin;

  return {
    origin,
    isSecure: proto === 'https',
