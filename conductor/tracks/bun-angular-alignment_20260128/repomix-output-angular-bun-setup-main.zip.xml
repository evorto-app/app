import { InjectionToken, inject } from '@angular/core';
import { REQUEST_CONTEXT } from '@angular/core';
import type { AuthSession } from './auth.types';

export const AUTH_SESSION = new InjectionToken<AuthSession | null>('AUTH_SESSION');

export const provideAuthSession = () => ({
  provide: AUTH_SESSION,
  useFactory: () => {
    const requestContext = inject(REQUEST_CONTEXT, { optional: true });
    if (!requestContext || typeof requestContext !== 'object') {
      return null;
    }

    return (requestContext as { auth?: AuthSession | null }).auth ?? null;
  },
});
</file>

