};

const sanitizeReturnTo = (value: string | null) => {
  if (!value) {
    return null;
  }

  if (!value.startsWith('/') || value.startsWith('//') || value.includes('://')) {
    return null;
  }

  return value;
};

const resolveSessionTtlSeconds = (expiresIn: number | undefined, override?: number) => {
  const fallbackSeconds = 60 * 60;
  const tokenTtl =
    typeof expiresIn === 'number' && Number.isFinite(expiresIn) && expiresIn > 0
      ? Math.floor(expiresIn)
      : fallbackSeconds;

  if (override && override > 0) {
    return Math.min(tokenTtl, override);
  }

  return tokenTtl;
};

const base64UrlEncode = (input: Uint8Array) => {
  let binary = '';
  for (const byte of input) {
    binary += String.fromCharCode(byte);
  }

  return globalThis
    .btoa(binary)
    .replace(/\+/g, '-')
    .replace(/\//g, '_')
    .replace(/=+$/, '');
};

// PKCE code challenge derived from the verifier using SHA-256.
const createCodeChallenge = (codeVerifier: string) =>
  Effect.tryPromise(async () => {
    const data = new TextEncoder().encode(codeVerifier);
    const digest = await crypto.subtle.digest('SHA-256', data);
    return base64UrlEncode(new Uint8Array(digest));
  });

const createRandomString = (length: number) => {
  const bytes = new Uint8Array(length);
  crypto.getRandomValues(bytes);
  return base64UrlEncode(bytes);
};

const buildAuthorizeUrl = (
  authConfig: AuthConfig,
  origin: string,
  state: string,
  codeChallenge: string,
) => {
  const url = new URL(`https://${authConfig.domain}/authorize`);
  url.searchParams.set('response_type', 'code');
  url.searchParams.set('client_id', authConfig.clientId);
  url.searchParams.set('redirect_uri', new URL(authConfig.callbackPath, origin).toString());
  url.searchParams.set('scope', authConfig.scope);
  url.searchParams.set('state', state);
  url.searchParams.set('code_challenge', codeChallenge);
  url.searchParams.set('code_challenge_method', 'S256');
  if (authConfig.audience) {
    url.searchParams.set('audience', authConfig.audience);
  }

  return url.toString();
};

const buildLogoutUrl = (authConfig: AuthConfig, returnTo?: string) => {
  const url = new URL(`https://${authConfig.domain}/v2/logout`);
  url.searchParams.set('client_id', authConfig.clientId);
  if (returnTo) {
    url.searchParams.set('returnTo', returnTo);
  }

  return url.toString();
};

const getAuthClients = (authConfig: AuthConfig) => ({
  authClient: new AuthenticationClient({
    domain: authConfig.domain,
    clientId: authConfig.clientId,
    clientSecret: authConfig.clientSecret,
  }),
  userInfoClient: new UserInfoClient({
    domain: authConfig.domain,
  }),
});

const getSessionStore = (store: KeyValueStore.KeyValueStore) =>
  KeyValueStore.prefix(store, sessionStorePrefix);

const getTransactionStore = (store: KeyValueStore.KeyValueStore) =>
  KeyValueStore.prefix(store, transactionStorePrefix);

// Sessions are stored server-side; the cookie holds only an opaque session id.
const loadSession = (request: HttpServerRequest.HttpServerRequest, authConfig: AuthConfig) =>
  Effect.gen(function*() {
    const sessionId = request.cookies[authConfig.sessionCookieName];
    if (!sessionId) {
      return null;
    }

    const store = yield* KeyValueStore.KeyValueStore;
    const sessions = getSessionStore(store);
    const stored = yield* sessions.get(sessionId);
    if (Option.isNone(stored)) {
      return null;
    }

    const session = parseAuthSession(stored.value);
    if (!session) {
      yield* sessions.remove(sessionId);
      return null;
    }

    if (session.expiresAt <= Date.now()) {
      yield* sessions.remove(sessionId);
      return null;
    }

    return session;
  });

const buildSessionCookieOptions = (isSecure: boolean, ttlSeconds: number) => ({
  httpOnly: true,
  secure: isSecure,
  sameSite: 'lax' as const,
  path: '/',
  maxAge: Duration.seconds(ttlSeconds),
});

// Start Auth0 authorization with PKCE and persist the transaction state.
const handleAuthLogin = (
  request: HttpServerRequest.HttpServerRequest,
  url: URL,
  authConfig: AuthConfig,
) =>
  Effect.gen(function*() {
    const { origin } = resolveRequestOrigin(request, authConfig);
    const returnTo = sanitizeReturnTo(url.searchParams.get('returnTo')) ?? '/';
    const state = createRandomString(16);
    const codeVerifier = createRandomString(32);
    const codeChallenge = yield* createCodeChallenge(codeVerifier);

    const transaction: AuthTransaction = {
      codeVerifier,
      returnTo,
      createdAt: Date.now(),
    };

    const store = yield* KeyValueStore.KeyValueStore;
    const transactions = getTransactionStore(store);
    yield* transactions.set(state, JSON.stringify(transaction));

    const authorizeUrl = buildAuthorizeUrl(authConfig, origin, state, codeChallenge);
    return HttpServerResponse.redirect(authorizeUrl);
  });

// Exchange the authorization code for tokens, fetch user info, and store a session.
const handleAuthCallback = (
  request: HttpServerRequest.HttpServerRequest,
  url: URL,
  authConfig: AuthConfig,
) =>
  Effect.gen(function*() {
    const code = url.searchParams.get('code');
    const state = url.searchParams.get('state');

    if (!code || !state) {
      return HttpServerResponse.text('Missing code or state.', { status: 400 });
    }

    const store = yield* KeyValueStore.KeyValueStore;
    const transactions = getTransactionStore(store);
    const stored = yield* transactions.get(state);
    if (Option.isNone(stored)) {
      return HttpServerResponse.text('Invalid state.', { status: 400 });
    }

    const transaction = parseAuthTransaction(stored.value);
    if (!transaction) {
      yield* transactions.remove(state);
      return HttpServerResponse.text('Invalid state.', { status: 400 });
    }

    if (Date.now() - transaction.createdAt > authConfig.transactionTtlSeconds * 1000) {
      yield* transactions.remove(state);
      return HttpServerResponse.text('State expired.', { status: 400 });
    }

    yield* transactions.remove(state);

    const { origin, isSecure } = resolveRequestOrigin(request, authConfig);
    const redirectUri = new URL(authConfig.callbackPath, origin).toString();
    const { authClient, userInfoClient } = getAuthClients(authConfig);

    const tokenResponse = yield* Effect.tryPromise(() =>
      authClient.oauth.authorizationCodeGrantWithPKCE({
        code,
        code_verifier: transaction.codeVerifier,
        redirect_uri: redirectUri,
        audience: authConfig.audience,
      }),
    );

    const tokenSet = tokenResponse.data;
    if (!tokenSet.access_token) {
      return HttpServerResponse.text('Missing access token.', { status: 400 });
    }

    const userInfoResponse = yield* Effect.tryPromise(() =>
      userInfoClient.getUserInfo(tokenSet.access_token),
    );

    const user = parseAuthUser(userInfoResponse.data);
    if (!user) {
      return HttpServerResponse.text('Invalid user info.', { status: 400 });
    }

    const sessionTtlSeconds = resolveSessionTtlSeconds(
      tokenSet.expires_in,
      authConfig.sessionTtlSeconds,
    );

    const session: AuthSession = {
      user,
      accessToken: tokenSet.access_token,
      expiresAt: Date.now() + sessionTtlSeconds * 1000,
      idToken: tokenSet.id_token,
      refreshToken: tokenSet.refresh_token,
    };

    const sessionId = createRandomString(32);
    const sessions = getSessionStore(store);
    yield* sessions.set(sessionId, JSON.stringify(session));

    const response = HttpServerResponse.redirect(transaction.returnTo);
    return yield* HttpServerResponse.setCookie(
      response,
      authConfig.sessionCookieName,
      sessionId,
      buildSessionCookieOptions(isSecure, sessionTtlSeconds),
    );
  }).pipe(
    Effect.catchAll(() => Effect.succeed(HttpServerResponse.text('Auth callback failed.', { status: 400 }))),
  );

// Clear the local session and redirect through Auth0 logout.
const handleAuthLogout = (
  request: HttpServerRequest.HttpServerRequest,
  url: URL,
  authConfig: AuthConfig,
) =>
  Effect.gen(function*() {
    const { origin, isSecure } = resolveRequestOrigin(request, authConfig);
    const returnTo = sanitizeReturnTo(url.searchParams.get('returnTo')) ?? '/';

    const sessionId = request.cookies[authConfig.sessionCookieName];
    if (sessionId) {
      const store = yield* KeyValueStore.KeyValueStore;
      const sessions = getSessionStore(store);
      yield* sessions.remove(sessionId);
    }

    const logoutReturnTo = new URL(returnTo, origin).toString();
    const logoutUrl = buildLogoutUrl(authConfig, logoutReturnTo);

    const response = HttpServerResponse.redirect(logoutUrl);
    return HttpServerResponse.expireCookie(response, authConfig.sessionCookieName, {
      path: '/',
      httpOnly: true,
      secure: isSecure,
      sameSite: 'lax',
    });
  });

// Lightweight endpoint for clients that want to check auth state.
const handleAuthMe = (
  request: HttpServerRequest.HttpServerRequest,
  authConfig: AuthConfig,
) =>
  Effect.gen(function*() {
    const session = yield* loadSession(request, authConfig);
    if (!session) {
      return yield* HttpServerResponse.json(
        { authenticated: false },
        { status: 401 },
      );
    }

    return yield* HttpServerResponse.json({ authenticated: true, user: session.user });
  });

const isStaticMethod = (method: string) => method === 'GET' || method === 'HEAD';

const safeDecodePath = (pathname: string): string | null => {
  try {
    return decodeURIComponent(pathname);
  } catch {
    return null;
  }
};

const resolveStaticPath = (pathname: string) =>
  Effect.gen(function*() {
    const decodedPath = safeDecodePath(pathname);
    if (!decodedPath || decodedPath.includes('\u0000')) {
      return null;
    }

    const relativePath = decodedPath.startsWith('/') ? decodedPath.slice(1) : decodedPath;
    if (!relativePath) {
      return null;
    }

    const path = yield* Path.Path;
    const basePath = yield* path.fromFileUrl(browserDistUrl);
    const normalizedBase = path.normalize(basePath);
    const targetPath = path.normalize(path.join(normalizedBase, relativePath));
    const basePrefix = normalizedBase.endsWith(path.sep)
      ? normalizedBase
      : `${normalizedBase}${path.sep}`;

    if (!targetPath.startsWith(basePrefix)) {
      return null;
    }

    return targetPath;
  });

const tryServeStatic = (request: HttpServerRequest.HttpServerRequest) =>
  Effect.gen(function*() {
    if (!isStaticMethod(request.method)) {
      return null;
    }

    const url = new URL(request.url, defaultOrigin);
    if (url.pathname.endsWith('/')) {
      return null;
    }

    const targetPath = yield* resolveStaticPath(url.pathname);
    if (!targetPath) {
      return null;
    }

    const fileSystem = yield* FileSystem.FileSystem;
    const exists = yield* fileSystem.exists(targetPath);
    if (!exists) {
      return null;
    }

    const response = yield* HttpServerResponse.file(targetPath, {
      headers: {
        'Cache-Control': cacheControlHeader,
      },
    });

    return response;
  });

// Provide the optional auth session to Angular SSR via REQUEST_CONTEXT.
const handleAngularRequest = (request: Request, authSession: AuthSession | null) =>
  Effect.tryPromise(() => angularApp.handle(request, { auth: authSession })).pipe(
    Effect.map((response) =>
      response ? HttpServerResponse.fromWeb(response) : notFoundServerResponse,
    ),
  );

const buildRequestUrl = (
  request: HttpServerRequest.HttpServerRequest,
  authConfig: AuthConfig,
) => {
  const { origin } = resolveRequestOrigin(request, authConfig);
  return new URL(request.url, origin);
};

const staticRouteHandler = (request: HttpServerRequest.HttpServerRequest) =>
  Effect.gen(function*() {
    const response = yield* tryServeStatic(request);
    if (response) {
      return response;
    }

    return yield* Effect.fail(new HttpServerError.RouteNotFound({ request }));
  });

// Auth feature routes are registered as a layer so they can be composed and reused.
const authRoutesLayer = HttpLayerRouter.use((router) =>
  Effect.gen(function*() {
    const authConfig = yield* authConfigEffect;

    yield* router.add('GET', authConfig.loginPath, (request) =>
      handleAuthLogin(request, buildRequestUrl(request, authConfig), authConfig),
    );

    yield* router.add('GET', authConfig.callbackPath, (request) =>
      handleAuthCallback(request, buildRequestUrl(request, authConfig), authConfig),
    );

    yield* router.add('GET', authConfig.logoutPath, (request) =>
      handleAuthLogout(request, buildRequestUrl(request, authConfig), authConfig),
    );

    yield* router.add('GET', authMePath, (request) => handleAuthMe(request, authConfig));
  }),
);

// Static assets are served if present; otherwise fall through to SSR.
const staticRoutesLayer = HttpLayerRouter.add('*', '*', staticRouteHandler);

const routesLayer = Layer.mergeAll(authRoutesLayer, staticRoutesLayer);

// Fall back to SSR when a route isn't handled (or static misses), with optional auth context.
const withSsrFallback = <E, R>(effect: Effect.Effect<HttpServerResponse.HttpServerResponse, E, R>) =>
  effect.pipe(
    Effect.catchAll((error) => {
      if (error instanceof HttpServerError.RouteNotFound) {
        return Effect.gen(function*() {
          const request = yield* HttpServerRequest.HttpServerRequest;
          const authConfig = yield* authConfigEffect;
          const session = yield* loadSession(request, authConfig);
          const webRequest = BunHttpServerRequest.toRequest(request);
          return yield* handleAngularRequest(webRequest, session);
        }).pipe(Effect.catchAll(() => Effect.succeed(internalErrorServerResponse)));
      }

      return Effect.succeed(internalErrorServerResponse);
    }),
  );

// Provide Bun HTTP context, file system, paths, and in-memory session storage for handlers.
const handlerRuntimeLayer = Layer.mergeAll(
  Layer.succeed(ConfigProvider.ConfigProvider, ConfigProvider.fromEnv()),
  BunHttpServer.layerContext,
  BunFileSystem.layer,
  Path.layer,
  KeyValueStore.layerMemory,
);

const handlerAppLayer = routesLayer.pipe(Layer.provideMerge(handlerRuntimeLayer));

const { handler: serverHandler } = HttpLayerRouter.toWebHandler(handlerAppLayer, {
  middleware: withSsrFallback,
});

// The web handler already has its dependencies from the runtime layer, so an empty context is enough.
const handlerContext = Context.empty() as Parameters<typeof serverHandler>[1];

/**
 * Request handler used by the Angular CLI (for dev-server and during build) or Firebase Cloud Functions.
 */
export const reqHandler = createRequestHandler((request) =>
  serverHandler(request, handlerContext),
);

const serveEffect = Effect.gen(function*() {
  const port = yield* Config.withDefault(4000)(Config.port('PORT'));
  const serverLayer = HttpLayerRouter.serve(routesLayer, { middleware: withSsrFallback }).pipe(
    Layer.provide(
      Layer.mergeAll(
        Layer.succeed(ConfigProvider.ConfigProvider, ConfigProvider.fromEnv()),
        BunHttpServer.layer({ port }),
        BunFileSystem.layer,
        Path.layer,
        KeyValueStore.layerMemory,
      ),
    ),
  );

  yield* Effect.sync(() => {
    console.log(`Bun server listening on http://localhost:${port}`);
  });

  yield* Layer.launch(serverLayer);
});

if (import.meta.main) {
  BunRuntime.runMain(serveEffect);
}
